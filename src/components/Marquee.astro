---
const { margin, class: _class, speed = "1", reverse = true } = Astro.props;
const trueMargin = margin !== undefined ? margin : "2";
---

<div
    class={`marquee3k w-full overflow-clip bg-[--accent-muted-dark] my-${trueMargin} b-2 b-solid b-[--accent-bg-light]`}
    data-speed={speed}
    {...(reverse && {"data-reverse": true})}
>
    <h1 class={_class || "text-[--accent-text-dark] text-4xl py-2 px-4 font-bold m-0"}>
        <slot/>
    </h1>
</div>