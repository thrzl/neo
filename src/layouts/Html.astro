---
import ClientRouter from "astro/components/ClientRouter.astro";
const {neko, backgroundColor} = Astro.props
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>/thrizzle{Astro.url.pathname.endsWith("/") ? Astro.url.pathname.slice(0,-1) : Astro.url.pathname}</title>
        <link rel="icon" type="image/png" href="/skype/mantelpiece_clock.png" />
        <link rel="webmention" href="https://webmention.io/thrizzle.nekoweb.org/webmention" />
        <link rel="authorization_endpoint" href="https://indieauth.com/auth">
        <link rel="token_endpoint" href="https://tokens.indieauth.com/token">
        <ClientRouter />
    </head>
    <body class=`bg-${backgroundColor?.replace("bg-","") || "[--accent-bg-light, #000]"}`>
        { neko && (
            <script src="../assets/oneko.js"></script>
            ) }
        <slot />
    </body>
</html>

<style>
    @font-face {
        font-family: "Chicago";
        src: url("/fonts/Chicago.woff2") format("woff2");
        /* font-weight: 700; */
        font-stretch: normal;
        unicode-range: U+0020-02DC;
    }
    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond Bold Italic.woff2") format("woff2");
        font-weight: 700;
        font-style: italic;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
    }

    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
    }

    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond Italic.woff2") format("woff2");
        font-weight: 400;
        font-style: italic;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
    }

    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
    }

    p {
        font-family: "Apple Garamond", serif;
    }
    body {
        color: var(--accent-text-dark, #fff);
        font-family: "Apple Garamond", serif;
        margin: 0;
    }
</style>
