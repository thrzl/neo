---
// import ClientRouter from "astro/components/ClientRouter.astro";
const { neko, backgroundColor, title } = Astro.props;
import Sun from "../components/Sun.astro";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>
            {
                title ||
                    `thrizzle's ${
                        (Astro.url.pathname.endsWith("/")
                            ? Astro.url.pathname.slice(1, -1)
                            : Astro.url.pathname.slice(1)) || "planet"
                    }`
            }
        </title>
        <link rel="icon" type="image/png" href="/skype/mantelpiece_clock.png" />
        <link
            rel="webmention"
            href="https://webmention.io/thrizzle.nekoweb.org/webmention"
        />
        <link rel="authorization_endpoint" href="https://indieauth.com/auth" />
        <link rel="token_endpoint" href="https://tokens.indieauth.com/token" />
        <link
            rel="alternate"
            type="application/rss+xml"
            title="thrizzle's garden"
            href={new URL("rss.xml", Astro.site)}
        />
        <meta name="viewport" content="width=device-width" />
        <script>
            // load palette
            import type { CompletePalette } from "../lib/colors";
            const palette: CompletePalette = JSON.parse(
                sessionStorage.getItem("palette") || "",
            );
            if (palette) {
                const root = document.documentElement;
                root.style.setProperty(
                    "--dominant",
                    palette.dominant || "#000000",
                );
                root.style.setProperty(
                    "--accent-bg",
                    palette.palette[0] || "#fff",
                );
                root.style.setProperty(
                    "--accent-bg-light",
                    palette.palette[1] || "#fff",
                );
                root.style.setProperty(
                    "--accent-muted-light",
                    palette.palette[2] || "#fff",
                );
                root.style.setProperty(
                    "--accent-text",
                    palette.textColor || "#ffffff",
                );
            }
        </script>
    </head>
    <body style="background-color: var(--dominant)">
        <!-- {neko && <script src="../assets/oneko.js" />} -->
        <slot />
        <Sun />
    </body>
</html>

<style>
    @font-face {
        font-family: "Chicago";
        src: url("/fonts/Chicago.woff2") format("woff2");
        /* font-weight: 700; */
        font-stretch: normal;
        unicode-range: U+0020-02DC;
    }
    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond Bold Italic.woff2") format("woff2");
        font-weight: 700;
        font-style: italic;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
        font-display: swap;
    }

    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond Bold.woff2") format("woff2");
        font-weight: 700;
        font-style: normal;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
        font-display: swap;
    }

    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond Italic.woff2") format("woff2");
        font-weight: 400;
        font-style: italic;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
        font-display: swap;
    }

    @font-face {
        font-family: "Apple Garamond";
        src: url("/fonts/Apple Garamond.woff2") format("woff2");
        font-weight: 400;
        font-style: normal;
        font-stretch: normal;
        unicode-range: U+0020-02DC;
        font-display: swap;
    }

    p {
        font-family: "Apple Garamond", serif;
    }
    body {
        color: var(--accent-text-dark, #fff);
        font-family: "Apple Garamond", serif;
        margin: 0;
    }
</style>

<style is:global>
    * {
        @apply text-110% lg:text-100% xl:text-105%;
    }
</style>
