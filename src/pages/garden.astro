<script>
    document.addEventListener("DOMContentLoaded", () => {
        document.querySelectorAll("[copyValue]").forEach((section) => {
            section.addEventListener("click", () => {
              const copyValue = section.getAttribute("copyValue")
              if (!copyValue) return;
              navigator.clipboard.writeText(
                    copyValue,
